# ====================================================================
# VARIÁVEIS DE CONFIGURAÇÃO ESSENCIAIS
# ====================================================================
# URL de conexão com o banco de dados principal.
DATABASE_URL="postgresql://user:password@localhost:5432/mydatabase?schema=public"

# URL de conexão direta (usada pelo Prisma para migrações/introspection).
DIRECT_URL="postgresql://user:password@localhost:5432/mydatabase_direct"

# Configuração do Supabase (se aplicável).
SUPABASE_URL="https://xyz123abc456.supabase.co"
SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xyz.abc"

# URL do seu frontend (importante para CORS, redirecionamentos e e-mails).
FRONTEND_URL="http://localhost:3000"

# String longa, complexa e aleatória para assinar cookies de sessão.
SESSION_SECRET="uma_string_longa_e_aleatoria_para_assinatura_de_sessoes_12345"

# ====================================================================
# CONFIGURAÇÃO DO AZURE TRANSLATOR
# ====================================================================
# Chave de assinatura secreta.
AZURE_TRANSLATOR_KEY="abc123def456ghi789jkl012mno345pqr678"

# Endpoint do serviço.
AZURE_TRANSLATOR_ENDPOINT="https://api.cognitive.microsofttranslator.com/"

# Região onde o recurso está implantado.
AZURE_TRANSLATOR_REGION="brazilsouth"


# ====================================================================
